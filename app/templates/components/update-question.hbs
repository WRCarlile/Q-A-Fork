{{#if updateQuestionForm}}
	<h1>Update</h1>
	<div>
		<form>
			<div class="form-group">
				<label for="author">Author</label>
				{{input value=author id="author" placeholder=question.author}}
			</div>

			<div class="form-group">
				<label for="text">Question</label>
				{{input value=text id="text" placeholder=question.text}}
			</div>

			<div class="form-group">
				<label for="notes">Notes</label>
				{{input value=notes id="notes" placeholder=question.notes}}
			</div>

			<div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price"}}
      </div>

			<button {{action 'update' question}}>Update</button>
		</form>
	</div>
{{else}}
	<button class="waves-effect waves-light btn" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
