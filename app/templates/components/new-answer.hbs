{{#if addNewAnswer}}
  <h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author2">Author</label>
        {{input value=author2 id="author2"}}
      </div>

      <div class="form-group">
        <label for="reply">Answer</label>
        {{input value=reply id="reply"}}
      </div>

      <button class="waves-effect waves-light btn" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="waves-effect waves-light btn" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
